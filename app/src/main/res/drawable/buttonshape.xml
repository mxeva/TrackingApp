<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- rectangle je defaultní tvar -->
    <!-- zaoblení tlačítka -->
    <corners android:radius="10dp" />
    <!--
            android:angle - úhel v jakém přechází barvy
            android:centerX - v procentech udává polohu prostředí barvy
            android:centerColor - barva ve středu tlačítka
            android:startColor - barva na levé straně tlačítka
            android:endColor - barva na pravé straně tlačítka
            android:type - metoda přechodu barev"#33FFCC"
    -->
    <gradient android:angle="45"
        android:centerX="30%"
        android:centerColor="#3333CC"
        android:startColor="#0040FF"
        android:endColor="#666CCC"
        android:type="linear"
        />
    <padding
        android:left="2dp"
        android:top="0dp"
        android:right="2dp"
        android:bottom="0dp"
        />
    <size
        android:width="130dp"
        android:height="40dp"
        />
    <!-- nastavení ohraničení, width je tloušťka a color barva -->
    <!--<stroke
        android:width="2dp"
        android:color="#FFFF99"
        />-->
</shape>