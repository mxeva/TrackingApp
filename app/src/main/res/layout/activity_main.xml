<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:layout_centerHorizontal="true"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:keepScreenOn="true">

<TableRow android:layout_width="match_parent">
    <Button
        android:id="@+id/btnShowAddress"
        android:background="@drawable/buttonshape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adresa"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />
    <Button
        android:id="@+id/btnSendAddress"
        android:background="@drawable/buttonshape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sdilej polohu"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />
</TableRow>

<TableRow android:layout_width="match_parent">
    <Button
        android:id="@+id/btnShowOnMap"
        android:background="@drawable/buttonshape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ukaž na mapě"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_span="2"/>
</TableRow>

    <TableRow android:layout_width="match_parent">
        <Button
            android:id="@+id/btnSearchUser"
            android:background="@drawable/buttonshape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Najdi uživatele"
            android:textColor="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_span="2"/>
    </TableRow>
    <TableRow android:layout_width="match_parent">
        <AutoCompleteTextView
            android:id="@+id/etUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mail"
            android:textColor="#000000"
            android:layout_margin="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_span="2" />
    </TableRow>
    <TableRow android:layout_width="match_parent">
    <TextView
        android:layout_span="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvAddress"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="#009933"/>
</TableRow>
</TableLayout>
